<div class="background-wrapper">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-7">
                    <div class="card mt-4" style="border-radius: 15px;">
                        <div class="card-body p-5">

                            <h2 class="text-uppercase text-center mb-3">Order detail</h2>

                            <div class="container-fluid mt-4">
                                <div class="table-responsive">
                                    <table id="myTable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Phone</th>
                                                <th>Address</th>
                                                <th>Time</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>

                                        <tbody id="list_orders">
                                            <tr>
                                                <td class="text-center">{{order.id}}</td>
                                                <td>{{order.fullname}}</td>
                                                <td>{{order.phone}}</td>
                                                <td>{{order.address}}</td>
                                                <td>{{order.release_Date}}</td>
                                                <td class="text-center">{{order.status}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="container-fluid mt-4">
                                <div class="table-responsive">
                                    <table id="myTable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>

                                        <tbody id="list_orders">
                                            {{#each orderDetail}}
                                                <tr>
                                                    <td><img
                                                            src="{{this.image}}"
                                                            class="thumbnail img-responsive"
                                                            alt="image"
                                                            width="100"
                                                            height="100"
                                                            style="border-radius: 10px;"
                                                        /></td>
                                                    <td>{{this.product_name}}</td>
                                                    <td class="text-center">{{this.price}}</td>
                                                    <td class="text-center">{{this.quantity}}</td>
                                                    <td class="text-center">{{this.total}}</td>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="container-fluid">
                                    <div class="table-responsive">
                                        <table id="myTable" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Total</th>
                                                </tr>
                                            </thead>

                                            <tbody id="list_orders">
                                                <tr>
                                                    <td class="text-center">{{totalOrder}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>